<div class="form">
    <div class="form__container">
            <h2>Sign In</h2>
        <%= form_tag(session_path) do %>
            
            <div class="input-box">
                <%= label_tag :email %>
                <%= email_field_tag :email %>
                 <i></i>
            </div>
            <div class="input-box">
                <%= label_tag :password %>
                <%= password_field_tag :password %>
                <i></i>
            </div>
            <div class="links">
                <%= link_to "Forgot your password?", '#' %>
                <%= link_to "Sign Up", new_user_path %>
            </div>
            <%= submit_tag "Sign in", class: "btn" %>
        <% end %>
    </div>
</div>