<div class="box">
    <div class="form">
            <h2>Sign In</h2>
        <%= form_tag(session_path) do %>
            
            <div class="input-box">
                <%= label_tag :email %>
                <%= email_field_tag :email, nil, autofocus: true %>
                 <i></i>
            </div>
            <div class="input-box">
                <%= label_tag :password %>
                <%= password_field_tag :password, nil %>
                <i></i>
            </div>
            <%= submit_tag "Sign in" %>
         
        <% end %>
    </div>
</div>